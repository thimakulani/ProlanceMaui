<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProlanceMaui.Pages.UpdateServicePage"
             Title="UpdateServicePage">
    <StackLayout BackgroundColor="{StaticResource Primary}">
        <ImageButton Margin="10" Source="left_back_icon.png" BackgroundColor="Transparent" HeightRequest="35" WidthRequest="35"
                     HorizontalOptions="Start" x:Name="ImgBack" Clicked="ImgBack_Clicked" />
        <Frame WidthRequest="500" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <StackLayout WidthRequest="450">
                <Label x:Name="SID" Margin="10"/>
                <Label x:Name="OldServiceName" Margin="10"/>
                <Entry Placeholder="NEW SERVICE NAME" Margin="10" x:Name="NewServiceName"/>
                <Button Text="UPDATE" x:Name="BtnUpdate" Clicked="BtnUpdate_Clicked" Margin="10"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>
